# Personal editorconfig with defaults.
# This should go in $HOME
# vim: ft=editorconfig

root = true

[*]
charset = utf-8
insert_final_newline = true
max_line_length = 79
trim_trailing_whitespace = true

[*.{c,C,cpp,cxx,cc,h,hh,hpp,hxx}]
indent_size = 4
indent_style = space

[*.py]
indent_size = 4
indent_style = space

[*.sh]
end_of_line = lf
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab

[*.{md,markdown}]
indent_size = 2
trim_trailing_whitespace = false
